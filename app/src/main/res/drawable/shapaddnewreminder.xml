<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- This is the background shape with null fill -->
    <item android:drawable="@android:color/transparent" />

    <!-- This is the gradient overlay on top of the background shape -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="135"
                android:startColor="#BF5A5F"
                android:endColor="#DCA8B5"
                android:type="linear" />
            <corners android:topLeftRadius="16dp" android:topRightRadius="16dp"
                android:bottomLeftRadius="16dp" android:bottomRightRadius="16dp" />
        </shape>
    </item>
</layer-list>







